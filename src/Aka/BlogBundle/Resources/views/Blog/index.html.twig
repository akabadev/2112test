{# src/Aka/BlogBundle/Resources/views/Blog/index.html.twig #}

{% extends "AkaBlogBundle::layout.html.twig" %}

{% block title %}
Welcome - {{ parent() }}
{% endblock %}

{% block akablog_body %}

  <h2>News</h2>
  
  <ul>
    {% for article in articles %}
      <li>
        <a href="{{ path('akablog_voir', {'id': article.id}) }}">{{
   article.titre }}</a>
    par {{ article.auteur }},
     le {{ article.date|date('d/m/Y') }}
      </li>
   {% else %}
     <li>Sorry no article was found!</li>
  {% endfor %}
  </ul>
{% endblock %}